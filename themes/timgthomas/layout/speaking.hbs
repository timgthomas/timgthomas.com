<div role="main">
  <header>
    <h1>{{page.title}}</h1>
  </header>
  <p>Interested in having me speak at your next event? <a href="mailto:speaking@timgthomas.com">Get in touch!</a></p>
  <ol class="talk-list">
    {{#each site.data.talks}}
      <li>
        <figure>
          <img src="/images/talks/{{this.thumbnail}}">
          <figcaption>
            <h2>{{this.name}}</h2>
            <p>{{this.conference}}</p>
            <ul>
              {{#each this.links}}
                <li><a href={{this.link}} target='_blank' rel='noopener'>{{this.type}}</a></li>
              {{/each}}
            </ul>
          </figcaption>
        </figure>
      </li>
    {{/each}}
  </ol>
</div>
