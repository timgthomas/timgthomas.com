---
import Masthead from '@components/masthead.astro'
import { ViewTransitions } from 'astro:transitions'
import { displayName } from '../../package.json'

import '@styles'

interface Props {
  title: string
}

const { title } = Astro.props
const pageTitle = [title, displayName].filter(Boolean).join(' â€¢ ')
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <ViewTransitions />
  </head>
  <body>
    <Masthead title={displayName} />
    <main class="constrain">
      <header class="title">
        <h1>{title}</h1>
      </header>
      <slot />
    </main>
    <footer class="constrain">
      <!-- TODO -->
    </footer>
  </body>
</html>
